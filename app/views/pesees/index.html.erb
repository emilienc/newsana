<h1>Liste des pesees</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Date</th>
    <th>Poids</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @pesees.each do |pesee| %>
  <tr>
    <td><%= pesee.quand %></td>
    <td><%= pesee.what %> kg</td>
    <td><%= link_to 'Modifier', edit_pesee_path(pesee) %></td>
    <td><%= link_to 'Supprimer', pesee_path(pesee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

