# encoding: UTF-8

<div class='row'>

      <div class="span8 well">


<%= simple_form_for(@pesee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quand, label: 'Date de la pesée' %>
    <%= f.input :what, label: 'Votre poids en kg' %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

 <div class="form-actions">  
    <%if delete %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Modifier
      <% end %>
      <%= button_tag(type: 'submit', class: "btn btn-primary btn-danger", :name=>'destroy') do %>
        <i class="icon-trash icon-white"></i> Supprimer
      <% end %>
    <%else%> 
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Créer
        <%end%>
    <%end%>
  </div>
<% end %>
</div>
</div>