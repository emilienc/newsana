<%= simple_form_for([@user, @repa]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id %>
    <%= f.input :quand %>
    <%= f.input :name, :collection => ['petit dejeuner', 'dejeuner', 'collation', 'diner'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
