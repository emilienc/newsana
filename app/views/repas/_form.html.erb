<%= simple_nested_form_for(@repa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.input :quand %>
    <%= f.input :name, :collection => ['petit dejeuner', 'dejeuner', 'collation', 'diner'] %>
    <%= f.simple_fields_for :ingredients do |ff| %>
    	<%= ff.input :quantite %>
    	<%= ff.input :aliment_id ,:collection => Aliment.all, prompt:  'Choose the aliment'%>
      <%= ff.link_to_remove "Remove this task" %>
    <%end%>
   <p><%= f.link_to_add "Add an aliment", :ingredients %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
