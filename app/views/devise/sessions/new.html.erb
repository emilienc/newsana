<div class='row'>
<h1>Connexion</h1>

      <div class="span6 well">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true , label: t('user.email') %>
  <%= f.input :password, label: t('user.password') %> 
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name) %><br />
<% end -%>
  <%= f.input :remember_me, :as => :boolean ,label: "Se souvenir de moi" if devise_mapping.rememberable?%>
  <%= f.button :submit, "Connexion", :class => 'btn btn-success' %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Se connecter avec #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
<div>
	</div>